{% import "_includes/forms" as forms %}

{% includeCssResource "contactformplus/css/ContactFormPlus_Style.css" %}
{% includeJsResource "contactformplus/js/ContactFormPlus_Script.js" %}

{{ forms.selectField({
    label: 'Craft Section',
    instructions: 'Choose which Craft section the plugin should use to save the Contact Form submissions.',
    id: 'craftSection',
    name: 'craftSection',
    options: craftSections,
    value: settings['craftSection']})
}}

{{ forms.textField(
	{
		label: 'Name Field Handle',
		instructions: 'The handle of the contact form field for the Name.',
   		id: 'nameField',
    	name: 'nameField',
		value: settings['nameField']
	}) 
}}

{{ forms.textField(
	{
		label: 'Email Field',
		instructions: 'The handle of the contact form field for the Email.',
   		id: 'emailField',
    	name: 'emailField',
    	value: settings['emailField']
	}) 
}}

{{ forms.textField(
	{
		label: 'Phone Field',
		instructions: 'The handle of the contact form field for the Phone.',
   		id: 'phoneField',
    	name: 'phoneField',
    	value: settings['phoneField']
	}) 
}}

{{ forms.textField(
	{
		label: 'Message Field',
		instructions: 'The handle of the contact form field for the Message.',
   		id: 'messageField',
    	name: 'messageField',
    	value: settings['messageField']
	}) 
}}
